<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.swt.dandanplay">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fileexplorer.view.ContentsActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".fileexplorer.view.FileExplorerActivity"
                  android:screenOrientation="portrait">
        </activity>

        <service android:name=".fileexplorer.service.ScanVideoFileService">
            <intent-filter>
                <action android:name="cn.swt.dandanplay.ScanVideoFileService">
                </action>
            </intent-filter>
        </service>

        <activity android:name=".play.view.VideoViewActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>