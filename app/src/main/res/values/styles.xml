<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/stool_Toolbar</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="stool_default_textview_theme">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="stool_Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
